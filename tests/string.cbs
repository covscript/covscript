system.print("Please enter a string:")
define str=system.getline()
darwin.load()
define pix=darwin.pixel(" ",true,false,darwin.white,darwin.black)
while(true)
	darwin.fit_drawable()
	darwin.clear_drawable()
	darwin.draw_string(0.5*(darwin.get_width()-size_of(str)),0.5*darwin.get_height(),str,pix)
	darwin.update_drawable()
end
