#import "../headers/darwin.cbh"
darwin.init_graphics()
define pix=darwin.darwin_pixel("@",true,false,darwin.get_color("blue"),darwin.get_color("white"))
define paint=darwin.darwin_picture()
darwin.set_frame_limit(60)
define bx=0
define by=0
define bxi=true
define byi=true
while(true)
        darwin.fit_drawable()
        darwin.clear_drawable(paint)
        darwin.resize_drawable(paint,darwin.get_width_drawable(),darwin.get_height_drawable())
        darwin.draw_point(paint,bx,by,pix)
        if(bx<=0)
                bxi=true
        end
        if(by<=0)
                byi=true
        end
        if(bx>=darwin.get_width_drawable()-1)
                bxi=false
        end
        if(by>=darwin.get_height_drawable()-1)
                byi=false
        end
        if(bxi)
                ++bx
        else
                --bx
        end
        if(byi)
                ++by
        else
                --by
        end
        darwin.draw_picture(0,0,paint)
        darwin.update_drawable()
end
